        <Button x:Name="Button_next" Content = "Далее" HorizontalAlignment="Left" Margin="180,0,0,0" VerticalAlignment="Center" Height="28" Width="47" Click="Button_next_Click"/>
        <Label Content="Введите свое имя:" HorizontalAlignment="Center" Margin="0,65,0,0" VerticalAlignment="Top" Width="230"/>
        <TextBox x:Name="TextBox_Name" HorizontalAlignment="Center" Margin="0,96,0,0" MaxLength="20" TextWrapping="Wrap" VerticalAlignment="Top" Width="230" Height="22"/>

    </Grid>
</Window>
